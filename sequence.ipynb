    "inp = input('Enter a Number:')\n",
    "n = int(inp)\n",
    "while n != 1:\n",
    "    print(n, end=' ')     # Use comma to suppress newline\n",
    "    if n % 2 == 0:        # n is even\n",
    "        n = n / 2\n",
    "    else:                 # n is odd\n",
    "        n = n * 3 + 1\n",
